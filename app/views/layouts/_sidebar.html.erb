<div id="sidebar">
  <div id="sidebar-scroll">
    <div class="sidebar-content">
      <%= link_to root_url, class: "sidebar-brand" do %>
        <i class="gi gi-flash"></i>
        <span class="sidebar-nav-mini-hide">
          <strong><%= t "layout.site_name" %></strong>
        </span>
      <% end %>
      <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
        <div class="sidebar-user-avatar">
          <a href="javascript:">
            <%= image_tag "placeholders/avatars/avatar2.png" %>
          </a>
        </div>
        <div class="sidebar-user-name"><%= t "layout.my_account" %></div>
        <div class="sidebar-user-links">
          <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" title="Profile"><i class="gi gi-user"></i></a>
          <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" title="Messages"><i class="gi gi-envelope"></i></a>
          <%= link_to edit_user_registration_path, method: :get,
            title: t("layout.setting"), class: "enable-tooltip" do %>
            <i class="gi gi-cogwheel"></i>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete,
            title: t("layout.logout"), class: "enable-tooltip" do %>
            <i class="gi gi-exit"></i>
          <% end %>
        </div>
      </div>
      <ul class="sidebar-nav">
        <li>
          <%= link_to search_spaces_url do %>
            <span class="sidebar-nav-mini-hide">
              <%= t "layout.search_for_space" %>
            </span>
          <% end %>
        </li>
        <li>
          <a href="javascript:" class="sidebar-nav-menu">
            <i class="fa fa-angle-left sidebar-nav-indicator sidebar-nav-mini-hide"></i>
            <i class="gi gi-shopping_cart sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "layout.my_venues" %></span>
          </a>
          <ul>
            <li>
              <%= link_to t("layout.my_spaces"), venues_url %>
            </li>
            <li>
              <a href="javascript:"><%= t "layout.booking_history" %></a>
            </li>
          </ul>
        </li>
        <li class="sidebar-header">
          <span class="sidebar-header-title"><%= t "layout.site_name" %></span>
        </li>
        <li>
          <a href="javascript:"><i class="gi gi-charts sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "layout.how_it_work" %>
            </span>
          </a>
        </li>
        <li>
          <a href="javascript:"><i class="gi gi-share_alt sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "layout.help" %></span>
          </a>
        </li>
        <li>
          <a href="javascript:"><i class="gi gi-film sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "layout.about" %></span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
